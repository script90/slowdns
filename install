ip=br.dnstt.xyz
function goinst(){
clear
echo -e "Deseja instalar a linguagem GO Lang"
echo -e "Continuar?"
while [[ ${yesno} != @(s|S|y|Y|n|N) ]]; do
read -p "[S/N]: " yesno
tput cuu1 && tput dl1
done
if [[ ${yesno} = @(s|S|y|Y) ]]; then
echo -e "Instalando..."
cd
wget https://golang.org/dl/go1.15.linux-amd64.tar.gz 1> /dev/null 2> /dev/null
rm -rf /usr/local/go && tar -C /usr/local -xzf go1.15.linux-amd64.tar.gz
export GOROOT=/usr/local/go
export PATH=$GOPATH/bin:$GOROOT/bin:$PATH
rm /root/go1.15.linux-amd64.tar.gz
source /root/.bashrc
fi
}
goinst
cd 
rm -rf /root/dnstt
git clone https://www.bamsoftware.com/git/dnstt.git
cd /root/dnstt/dnstt-server
go build
./dnstt-server -gen-key -privkey-file server.key -pubkey-file server.pub
wget -O /etc/ssh/sshd_config https://raw.githubusercontent.com/script90/2.9/master/install/sshd_config > /dev/null 2>&1
service ssh restart
sudo echo "cd /root/dnstt/dnstt-server && screen -dms dns ./dnstt-server -udp :53 -privkey-file server.key $ip 127.0.0.1:22" > /bin/slow
sudo chmod +x /bin/slow
clear
cat /root/dnstt/dnstt-server/server.pub
